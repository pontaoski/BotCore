{
    "compilerOptions": {
        "module": "CommonJS",
        "removeComments": false,
        "target": "ES2020",
        "lib": ["ES2020"],
        "outDir": "./build",
        "skipLibCheck": true,
        "strictNullChecks": true
    },
    "include": [
        "scripts/**/*.ts",
        "headers/*.d.ts",
    ],
    "exclude": [
        "build/*"
    ]
}